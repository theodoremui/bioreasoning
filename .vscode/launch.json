    "version": "0.2.0",
    "configurations": [
        {
            "name": "bioconcierge",
            "type": "debugpy",
            "request": "launch",
            "program": "bioagents/agents/bio_concierge.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "bioreasoning.py"
            ],
            "jinja": true
        }
    ]
}